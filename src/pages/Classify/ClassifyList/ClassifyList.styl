.listContainer
  float left
  width 23%
  height 580px
  border-right 1px solid #e3e3e2
  overflow hidden
  .listContainerWrap
    width 100%
    .listItem
      padding 8px 0 8px 0
      text-align center
      width 100%
      height 50px
      line-height 34px
      .class_item_span
        font-size 14px
        display inline-block
        margin-top -4px
        height 30px
      .red_font
        color #b4282d
      .red_line
        width 3px
        height 100%
        background-color #b4282d
        float left
        display inline-block