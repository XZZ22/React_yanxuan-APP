.brand
  width 100%
  height 260px
  overflow hidden
  .brand_content
    width 100%
    height 250px
    .brand_content_item
      display block
      width 48%
      float left
      height 47%
      background-color #F4F4F4
      margin 1%
      padding-right 2px
      font-size 14px
      text-decoration none
      color black
      position relative
      .brand_content_item_div
        width  54%
        position absolute
        top 0
        left 0
        margin 10px 20px 0 10px
        .brand_content_item_margin
          margin-top 4px
          font-size 12px
        .brand_content_item_border
          border 1px solid #b4282d
          display inline-block
        .brand_content_item_p
          white-space nowrap
          text-overflow ellipsis
          overflow hidden
          font-size 14px
      img
        float right
